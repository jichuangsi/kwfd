page {
    background-color: #F4F4F4;
}
.nav_list {
    width: 100%;
    background-color: #FFF;
    box-sizing: border-box;
    padding: 23rpx 13rpx;
    display:flex;
}
.nav_list view {
    display: inline-block;
}
.nav_list .title{
    width: 120rpx;
    height: 40rpx;
}
.nav_list view:last-child{
    flex:1;
}
.nav_list text{
    display:inline-block;
    padding: 0 20rpx;
    text-align:center;
    font-size: 24rpx;
    margin-bottom: 20rpx;
}
.nav_list .text {
    background-color:#3D72FE;
    color:#fff;
    border-radius:14.5rpx;
}

.curriculum {
  width: 100%;
  background-color: #fff;
  margin: 20rpx 0;
  padding-bottom: 20rpx;
}
.curriculum_nav {
  width: 100%;
  display: flex;
  flex-wrap:wrap;
  background-color: #fff;
}
.curriculum_nav .nav_box {
  width: 50%;
  height: 418rpx;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}
.curriculum_nav .nav_box .nav_top {
  width: 100%;
  height: 266rpx;
  box-shadow:0px 1px 5px 0px rgba(0, 0, 0, 0.15);
}
.curriculum_nav .nav_box .nav_top image{
  width: 100%;
  height: 100%;
}
.curriculum_nav .nav_box .nav_bottom {
  width: 100%;
  height: 152rpx;
}
.curriculum_nav .nav_box .nav_bottom .text {
  width: 100%;
  color:#333333;
  font-size:28rpx;
  line-height:36rpx;
  margin-top: 20rpx;
}
.curriculum_nav .nav_box .nav_bottom text {
  width: 50%;
  color:#3D72FE;
  font-size:24rpx;
  display:inline-block;
}
.curriculum_nav .nav_box .nav_bottom text:last-child {
  color:#666666;
  font-size:24rpx;
  text-align:right; 
}
 .btn{
  width: 152rpx;
  height: 46rpx;
  line-height: 46rpx;
  font-size: 24rpx;
  text-align: center;
  border: 1px solid #3D72FE;
  color:#3D72FE;
  margin: 0 auto;
  border-radius:23px;
  margin-top: 40rpx;
}
.Teacher {
  width: 100%;
  background-color: #fff;
  margin: 20rpx 0;
  padding-bottom: 20rpx;
}
.Teacher_nav {
  width: 100%;
  background-color: #fff;
}
.Teacher_box {
  width: 100%;
  height: 164rpx;
  display: flex;
  margin-bottom: 20rpx;
}
.Teacher_box .nav_left {
  width: 146rpx;
  height: 144rpx;
  padding: 20rpx 22rpx;
  box-sizing: border-box;
}
.Teacher_box .nav_left image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: red;
}
.Teacher_box .nav_right{
  flex: 1;
  padding-right: 28rpx;
  box-sizing: border-box;
}
.Teacher_box .nav_right .title {
  color: #333333;
  font-size: 28rpx;
  font-weight: 600;
}
.Teacher_box .nav_right text {
  color: #666666;
  font-size: 24rpx;
}